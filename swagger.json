{
  "openapi": "3.0.0",
  "info": {
    "title": "Sneaker Store API",
    "version": "1.0.0",
    "description": "API documentation for the Sneaker Store project"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/users": {
      "get": {
        "summary": "Get all users",
        "responses": {
          "200": {
            "description": "A list of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": { "type": "string" },
                      "name": { "type": "string" },
                      "email": { "type": "string" },
                      "address": { "type": "string" },
                      "phone": { "type": "string" }
                    },
                    "required": ["_id", "name", "email", "address", "phone"]
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "address": { "type": "string" },
                  "phone": { "type": "string" }
                },
                "required": ["name", "email", "address", "phone"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": { "type": "string" },
                    "name": { "type": "string" },
                    "email": { "type": "string" },
                    "address": { "type": "string" },
                    "phone": { "type": "string" }
                  },
                  "required": ["_id", "name", "email", "address", "phone"]
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      },
      "delete": {
        "summary": "Delete a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the user to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/orders": {
      "post": {
        "summary": "Create a new order",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "integer" },
                  "sneaker_id": { "type": "integer" },
                  "quantity": { "type": "integer" },
                  "total_price": { "type": "number" },
                  "status": { "type": "string" }
                },
                "required": ["user_id", "sneaker_id", "quantity", "total_price", "status"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": { "type": "string" },
                    "user_id": { "type": "integer" },
                    "sneaker_id": { "type": "integer" },
                    "quantity": { "type": "integer" },
                    "total_price": { "type": "number" },
                    "status": { "type": "string" }
                  },
                  "required": ["_id", "user_id", "sneaker_id", "quantity", "total_price", "status"]
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      },
      "delete": {
        "summary": "Delete an order by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the order to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "404": {
            "description": "Order not found"
          }
        }
      }
    },
    "/api/sneakers": {
      "post": {
        "summary": "Create a new sneaker",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "brand": { "type": "string" },
                  "category_id": { "type": "integer" },
                  "price": { "type": "number" },
                  "stock": { "type": "integer" }
                },
                "required": ["name", "brand", "category_id", "price", "stock"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sneaker created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": { "type": "string" },
                    "name": { "type": "string" },
                    "brand": { "type": "string" },
                    "category_id": { "type": "integer" },
                    "price": { "type": "number" },
                    "stock": { "type": "integer" }
                  },
                  "required": ["_id", "name", "brand", "category_id", "price", "stock"]
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      },
      "delete": {
        "summary": "Delete a sneaker by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the sneaker to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "404": {
            "description": "Sneaker not found"
          }
        }
      }
    }
  }
}
